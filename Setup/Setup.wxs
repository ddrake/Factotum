<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*"
		Name="Factotum"
		Language="1033"
		Version="1.25.0.0"
		UpgradeCode="E55A50AE-95E2-4693-B518-3A374281C079"
		Manufacturer="Dow Drake">
		<Package Description="#Reporting Tool for FAC Inspections of Nuclear Plants"
			Comments="This installer package replaces the old broken one!"
			InstallerVersion="200"
			Compressed="yes"/>
		<!--
			Source media for the installation. 
 			Specifies a single cab file to be embedded in the installer's .msi. 
		-->
		<Media Id="1" Cabinet="contents.cab" EmbedCab="yes" CompressionLevel="high"/>
		
		<!-- Installation directory and files are defined in Files.wxs -->
		<Directory Id="TARGETDIR" Name="SourceDir"/>
		
		<Feature Id="Complete"
		         Title="Factotum"
		         Description="Reporting Tool for FAC Inspections of Nuclear Plants"
		         Level="1"
		         ConfigurableDirectory="INSTALLDIR">
		         <ComponentRef Id="MyComponent"/>
		</Feature>
		
		<!-- 
			Using the Wix UI library
 
			WixUI_Mondo includes the full set of dialogs:
 			
			welcome
			license agreement
			setup type (typical, custom, and complete)
			feature customization
			directory browse
			disk cost. 

			Maintenance-mode dialogs are also included. 

			Use WixUI_Mondo when you have some of your product's features 
			are not installed by default and there is a meaningful 
			difference between typical and complete installs
		-->
		<UIRef Id="WixUI_Mondo"/>
	</Product>
</Wix>
